<!-- Validation failure messages -->
<% if @group_order.errors.any? %>
  <% @group_order.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Group Order</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_group_order" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for receipt -->
      <div class="form-group">
        <label for="receipt" class="control-label">
          Receipt
        </label>

        <input type="text" id="receipt" name="receipt" placeholder="Receipt" class="form-control" value="<%= @group_order.receipt %>">
      </div>

      <!-- Label and input for price -->
      <div class="form-group">
        <label for="price" class="control-label">
          Price
        </label>

        <input type="text" id="price" name="price" placeholder="Price" class="form-control" value="<%= @group_order.price %>">
      </div>

      <!-- Label and input for restaurant_id -->
      <div class="form-group">
        <label for="restaurant_id" class="control-label">
          Restaurant
        </label>

        <input type="text" id="restaurant_id" name="restaurant_id" placeholder="Restaurant" class="form-control" value="<%= @group_order.restaurant_id %>">
      </div>

      <button class="btn btn-success">
        Create Group Order
      </button>
      or
      <a href="/group_orders">Cancel</a>
    </form>
  </div>
</div>
